        @*pixel admin starts*@

        <script>var init = [];</script>     

        <div id="main-wrapper">


<!-- 2. $MAIN_NAVIGATION ===========================================================================

	Main navigation
-->
	<div id="main-navbar" class="navbar navbar-inverse" role="navigation">
		<!-- Main menu toggle -->
		<button type="button" id="main-menu-toggle"><i class="navbar-icon fa fa-bars icon"></i><span class="hide-menu-text">HIDE MENU</span></button>
		
		<div class="navbar-inner">
			<!-- Main navbar header -->
			<div class="navbar-header">

				<!-- Logo -->
				<a href="@Url.Action("Index", "Home")" class="navbar-brand">
					<div><img alt="Simple HRM" src="/Images/icon_128.png"></div>
					Simple HRM
				</a>

				<!-- Main navbar toggle -->
				<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#main-navbar-collapse"><i class="navbar-icon fa fa-bars"></i></button>

			</div> <!-- / .navbar-header -->

			<div id="main-navbar-collapse" class="collapse navbar-collapse main-navbar-collapse">
				<div>
					<ul class="nav navbar-nav">
						@foreach (var module in Model.modues)
                        {
                           <li>
			                  @Html.ActionLink(module.Name, "Module", "Home", new { moduleId = module.Id }, null)
		                    </li>
                        }                      					
					</ul> <!-- / .navbar-nav -->

					<div class="right clearfix">
						<ul class="nav navbar-nav pull-right right-navbar-nav">
                            @Html.Action("LoginUserInfo", "Home")
						</ul> <!-- / .navbar-nav -->
					</div> <!-- / .right -->
				</div>
			</div> <!-- / #main-navbar-collapse -->
		</div> <!-- / .navbar-inner -->
	</div> <!-- / #main-navbar -->
<!-- /2. $END_MAIN_NAVIGATION -->


<!-- 4. $MAIN_MENU =================================================================================

		Main menu
		
		Notes:
		* to make the menu item active, add a class 'active' to the <li>
		  example: <li class="active">...</li>					
-->

	<div id="main-menu" role="navigation">
		<div id="main-menu-inner">			
			<ul class="navigation">
                @helper ShowTree(IEnumerable<ModuleMenu> menus)
                    {                     
                        foreach (var menu in menus)
                        {
                            if (menu.Menus.Any())
                            {
                                <li class="mm-dropdown">
					                <a href="#"><i class="menu-icon fa fa-th"></i><span class="mm-text">@menu.Name</span></a>
					                <ul>
						                @ShowTree(menu.Menus)				
					                </ul>
				                </li>                    
                            }
                            else
                            {                            
                                <li>
			                        <a href="@Url.Action("Index", "Home1")"><i class="menu-icon fa fa-dashboard"></i><span class="mm-text"> @menu.Name </span></a>                                
		                        </li>
                            }
                        }                         
                    }

                 @ShowTree(Model.Menus)				          
            </ul> <!-- / .navigation -->			
		</div> <!-- / #main-menu-inner -->
	</div> <!-- / #main-menu -->
<!-- /4. $MAIN_MENU -->

	<div id="content-wrapper">
		
		<div class="row">
         @RenderSection("featured", required: false)
         @RenderBody()   
		</div>

	</div> <!-- / #content-wrapper -->
	<div id="main-menu-bg"></div>
</div> <!-- / #main-wrapper -->
   
